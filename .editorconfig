root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.css]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[src/views/**.ejs]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 2
